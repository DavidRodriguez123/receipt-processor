*.iws
*.iml
*.ipr

# Ignore STS (Spring Tool Suite) specific files
.apt_generated
.classpath
.factorypath
.project
.settings
.springBeans
.sts4-cache

# Ignore Eclipse IDE specific files
.metadata/
bin/
tmp/
*.swp
*.swo

# Ignore NetBeans IDE files
/nbproject/private/
/nbbuild/
/dist/
/nbdist/
/.nb-gradle/

# Ignore VS Code specific files
.vscode/

